<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1">

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="@color/getstarted_text_color"
    android:layout_marginLeft="20dp"
    />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="EDUCATION-RESOURCES"
    android:textColor="@color/getstarted_text_color"
    android:layout_weight="0.5"
    android:textSize="15dp"
    android:gravity="center"
    android:layout_gravity="center"

    />
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:layout_marginRight="20dp"
         android:background="@color/getstarted_text_color"/>

 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_gravity="center"
        android:gravity="center"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/national_btn"
            android:background="@drawable/btn_selector_green"
            android:text="National"
            android:textColor="@color/colorPrimaryDark"
            />

        <Button
            android:id="@+id/regional_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_selector_green"
            android:text="Regional"
            android:textColor="@color/colorPrimaryDark"

            android:layout_alignLeft="@+id/national_btn"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/national_btn"
            android:layout_marginLeft="100dp"
            />
    </RelativeLayout>

    </LinearLayout>

<ListView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="0.3"
    android:layout_below="@+id/choose_section"
    android:id="@+id/sections_list"
    />

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:layout_alignParentBottom="true"
     android:background="@color/bg_color"
     android:layout_below="@+id/sections_list">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:textSize="16dp"
          android:textAllCaps="true"
         android:textColor="@color/white"
         android:text="send resources via sms"
         />

 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_color"
        android:layout_below="@+id/sections_list">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:text="send resources via email"

            />

    </LinearLayout>

</LinearLayout>
