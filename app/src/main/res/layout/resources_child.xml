<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expand_icon"
        android:layout_weight="6"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:id="@+id/name"
            android:textSize="18dp"
            android:text="HOME"
            android:layout_gravity="center"
            android:textColor="@color/getstarted_text_color"
            android:layout_weight="1"
            android:layout_toLeftOf="@+id/expand_icon"
            />

    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor
Lorem ipsum dolorLorem ipsum dolorLorem ipsum dolorLorem ipsum dolor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.google.com"  />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
            android:layout_gravity="center"
        android:src="@drawable/download_pdf"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor Lorem ipsum dolor Lorem ipsum dolor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/phone_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textSize="16dp"
            android:text="0800 16 92 45"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_toLeftOf="@+id/expand_icon"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/mailbox_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textSize="18dp"
            android:text="info@victimsupport.org.uk"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_toLeftOf="@+id/expand_icon"
            />

    </LinearLayout>



</LinearLayout>
