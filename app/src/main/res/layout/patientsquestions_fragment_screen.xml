<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/questions_view"
    android:visibility="gone">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1">

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:background="@color/getstarted_text_color"
    android:layout_marginLeft="20dp"
    />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Home"
    android:textColor="@color/getstarted_text_color"
    android:layout_weight="1.2"
    android:textSize="20dp"
    android:gravity="center"
    android:layout_gravity="center"
    />
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:layout_marginRight="20dp"
         android:background="@color/getstarted_text_color"/>

 </LinearLayout>

<ListView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    android:layout_weight="0.3"
    android:layout_below="@+id/choose_section"

    android:id="@+id/sections_list"
    />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_weight="1"
     android:layout_alignParentBottom="true"
     android:background="@color/bg_color"
     android:layout_below="@+id/sections_list">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center"
         android:textSize="18dp"

         android:textColor="@color/white"
         android:text="Next"/>

 </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loader"
        android:gravity="center"
        >
    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/colorPrimary"
        android:layout_gravity="center"
        app:indicatorName="BallClipRotateIndicator"
        style="@style/AVLoadingIndicatorView.Large"
        />
    </LinearLayout>
</LinearLayout>
